<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calculoIMCLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/borda_verde"
    tools:context=".CalculoIMCActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_margin="10dp">

        <!-- Campo de Peso -->
        <EditText
            android:id="@+id/editTextPeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o peso (kg)"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:background="#B3B3B3"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:layout_marginBottom="12dp"/>

        <!-- Campo de Altura -->
        <EditText
            android:id="@+id/editTextAltura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite a altura (m)"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:background="#B3B3B3"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:layout_marginBottom="12dp"/>

        <!-- Botão Calcular -->
        <Button
            android:id="@+id/buttonCalcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALCULAR IMC"
            android:background="#006341"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginTop="16dp"/>

        <!-- Botão Limpar -->
        <Button
            android:id="@+id/buttonLimpar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIMPAR"
            android:background="#006341"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginTop="8dp"/>

        <!-- Botão Fechar -->
        <Button
            android:id="@+id/buttonFechar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FECHAR"
            android:background="#006341"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
